<html>
    <head>
	<meta charset="utf-8"><!--configura a acentuação no site-->
	    <title>Formulário</title>
		
	<!-- java script-->
	<script language="javascript">
	function calcular(bse,altu)
	{
	    var ar;
		ar=parseInt(bse.value)*parseInt(altu.value);
		alert("A área do retângulo é "+ ar);
		document.write("A área do retângulo é "+ ar);
	}
	</script>
	</head>
	
	<body>
	<br>
	<center><h1>Área do retângulo</h1></center>
    <!--formulário-->
	<form name="calculo da area">
	Dê um número para a base do retângulo: <input type="text" name="bse">
	<br><br>
	Dê um número para a altura do retângulo: <input type="text" name="altu">
	<br><br>
	<input type="submit" value="calcular" onclick='calcular(bse,altu)'>  
	
	</form>
	</body>

</html>