<html>
    <head>
	
	<meta charset="utf-8"><!--configura a acentuação no site-->
	<title>Formulario</title>
	<script language="javascript">
	function verificar(mes)
	{
	    switch (parseInt(mes.value))
		{
		case 1: alert("Janeiro"); break;
		case 2: alert("Fevereiro"); break;
		case 3: alert("Março"); break;
		case 4: alert("Abril"); break;
		case 5: alert("Maio"); break;
		case 6: alert("Junho"); break;
		case 7: alert("Julho"); break;
		case 8: alert("Agosto"); break;
		case 9: alert("Setembro"); break;
		case 10: alert("Outubro"); break;
		case 11: alert("Novembro"); break;
		case 12: alert("Dezembro"); break;
		default: { alert("resposta inválida");}
		
		}
	
	}
	</script>
	</head>
	
	<body>
	<center>Número do Mês</center> 
	<br>
    <form name= "numero">
    Digite o número do mês: <input type= "text" name="mes">
    <br><br>
    <input type= "submit" value="verificar" onclick='verificar(mes)'>


	</form>
	</body>

</html>